<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the buttons representing the music genres -->
    <style name="genres">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">monospace</item>

    </style>

    <!-- Style for the TextViews in the song_item.xml -->
    <style name="song_list">
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for the play arrow icon -->
    <style name="play_arrow">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
